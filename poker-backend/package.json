{
  "name": "poker-backend",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "build": "npm run clean && npm run type-check && tsc",
    "start": "node dist/server.js",
    "dev": "ts-node src/server.ts",
    "dev:watch": "nodemon --exec ts-node src/server.ts",
    "seed": "ts-node src/scripts/seed.ts",
    "seed:prod": "node dist/scripts/seed.js",
    "create-admin": "ts-node src/scripts/createAdmin.ts",
    "generate-test-metrics": "ts-node src/scripts/generateTestMetrics.ts",
    "fix-session-ownership": "ts-node src/scripts/fixSessionOwnership.ts",
    "add-game-type-and-default-invite": "ts-node src/scripts/addGameTypeAndDefaultInvite.ts",
    "migrate-production": "ts-node src/scripts/migrateProduction.ts",
    "import-historical-data": "ts-node src/scripts/importHistoricalData.ts",
    "clean": "rm -rf dist",
    "postbuild": "cp -r database dist/ || mkdir -p dist/database",
    "type-check": "tsc --noEmit",
    "test": "npm run type-check && echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "axios": "^1.10.0",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "express-session": "^1.18.1",
    "js-cookie": "^3.0.5",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^6.9.8",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "pg": "^8.12.0",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/express-session": "^1.18.2",
    "@types/js-cookie": "^3.0.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/nodemailer": "^6.4.14",
    "@types/node": "^24.0.3",
    "@types/passport": "^1.0.17",
    "@types/passport-google-oauth20": "^2.0.16",
    "@types/pg": "^8.11.6",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
